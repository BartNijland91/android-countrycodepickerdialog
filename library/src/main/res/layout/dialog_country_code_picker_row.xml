<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewCountryCodePickerRowFlag"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="#E0E0E0"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/viewCountryCodePickerRowFlag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewCountryCodePickerRowFlag"
            app:layout_constraintTop_toTopOf="@+id/viewCountryCodePickerRowFlag">

        <TextView
                android:id="@+id/viewCountryCodePickerRowCountry"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Netherlands" />

        <TextView
                android:id="@+id/viewCountryCodePickerRowDialCode"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="The Netherlands" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>